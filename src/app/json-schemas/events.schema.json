{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/erekleroinishvili/cv/main/src/app/json-schemas/events.schema.json",
    "title": "List of CV Events",

    "type": "object",
    "additionalProperties": false,
    "required": ["events"],
    "properties": {
        "$schema": {"type": "string"},
        "$schema-local": {"type": "string", "description": "Can help during development when modifying schema itself, by temporarily swapping with \"$schema\""},
        "events": {
            "type": "array",
            "items": {
                "$ref": "./event.schema.json"
            }
        }
    }
}
